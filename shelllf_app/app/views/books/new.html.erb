<h2>New Book</h2>

<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :publisher %>
  <%= f.text_field :publisher %>

  <%= f.label :year_published %>
  <%= f.text_field :year_published %>

  <%= f.label :notes %>
  <%= f.text_area :notes, size: '60x12' %>

  <%= f.submit %>
<% end %>
